<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.example.events.HelloController">
    <TextField fx:id="nameField" GridPane.columnIndex="0" GridPane.rowIndex="0" onKeyReleased="#handleKeyReleased"/>
    <Button fx:id="helloButton"  text="Say Hello!" GridPane.columnIndex="1" GridPane.rowIndex="0"
            onAction="#onButtonClick"/>
    <Button fx:id="byeButton" text="Say Bye" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#onButtonClick"/>

    <CheckBox fx:id="ourCheckBox" text="Clear the field after saying hello or bye" GridPane.rowIndex="1" GridPane.columnIndex="0"
              GridPane.columnSpan="2" onAction="#handleChange"/>
    <Label fx:id="ourLabel" text="Nothing Has Happened" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

</GridPane>
