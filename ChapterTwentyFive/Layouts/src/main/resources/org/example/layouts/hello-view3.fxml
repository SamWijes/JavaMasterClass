<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.layouts.HelloController" >
    <top>
        <Label text="This label is in the top position" alignment="CENTER" style="-fx-border-color:blue;
            -fx-border-width:3;-fx-border-style: dashed " BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <Label text="This Label is Center This Label is Center This Label is Center"  padding="12"/>

    </center>
    <left>
        <Label text="This Label is left" />
    </left>

    <right>
        <Label text="This Label is right" />
    </right>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" >
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="Okay" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>

</BorderPane>
